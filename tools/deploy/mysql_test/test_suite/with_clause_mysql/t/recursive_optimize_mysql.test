--error 1146
explain basic
WITH rw (ename, mgr, empno, job) AS
(
    SELECT ename, mgr, empno, job
    FROM emp e
    UNION ALL
    SELECT e.ename, e.mgr, e.empno, e.job
    FROM rw r, emp e
    WHERE r.empno = e.mgr
)
SELECT ename, empno, mgr, job
FROM rw
WHERE job = 'PRESIDENT' ;

