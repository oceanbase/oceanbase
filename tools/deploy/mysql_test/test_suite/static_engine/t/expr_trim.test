# utf16
select concat('[', trim(c1), ']'), concat('[', trim(c2), ']'), concat('[', ltrim(c1), ']'), concat('[', ltrim(c2), ']'), concat('[', rtrim(c1), ']'), concat('[', rtrim(c2), ']') from t1;
