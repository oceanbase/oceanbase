DROP PROCEDURE IF EXISTS geom_insert;
delimiter //;
CREATE PROCEDURE geom_insert (IN n int)
BEGIN
 DECLARE i INT DEFAULT 0;
 declare x double;
 declare y double;
 WHILE i<n DO
     SET y=rand()*(180) - 90;
     SET x=rand()*360 - 180;
     insert into gis_point values (x,y,ST_srid(point(x,y), 4326)),
     (x,y,ST_srid(point(x,y), 4326));
        SET i=i+1;
 END WHILE;
END//

delimiter ;//

call geom_insert(10000);

